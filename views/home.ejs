<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
  <title>Home</title>
</head>
<body class="bg-gray-100 dark:bg-gray-900 flex items-center justify-center h-screen">
    <main class="p-6 flex flex-col items-center justify-center w-full max-w-lg bg-white rounded-lg shadow-lg dark:bg-gray-800">
        <h1 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">Upload Your File</h1>
        <button id="uploadButton" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg mb-6">
            Upload File
        </button>

        <div id="uploadForm" class="hidden w-full">
            <form action="/upload-file" method="post" enctype="multipart/form-data" class="space-y-4">
                <div class="flex items-center justify-center w-full">
                    <label for="dropzone-file" class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:bg-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600">
                        <div class="flex flex-col items-center justify-center pt-5 pb-6">
                            <svg class="w-10 h-10 mb-3 text-gray-500 dark:text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 16v-4a4 4 0 00-8 0v4m-4 0h16m-8 4v-4m0 0H8m4 0h4" />
                            </svg>
                            <p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Click to upload</span> or drag and drop</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">SVG, PNG, JPG, or GIF (MAX. 800x400px)</p>
                        </div>
                        <input id="dropzone-file" type="file" class="hidden" name="file" />
                    </label>
                </div>
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg">
                    Submit
                </button>
            </form>
        </div>
            <div class="files mt-3 flex flex-col gap-2">
                <%files.forEach((file)=>{ %>
                <div class="p-2 cursor-pointer rounded-md bg-gray-300">
                    <h1><%= file.originalname %></h1>


                    <a href ="/download/<%= file.filename %>" download="<%= file.originalname %>" class="text-blue-600 hover:text-blue-800">Download</a>
                </div>
            }) %>    
            </div>

    </main>

    <script>
        // Toggle the upload form visibility
        const uploadButton = document.getElementById('uploadButton');
        const uploadForm = document.getElementById('uploadForm');
        uploadButton.addEventListener('click', () => {
            uploadForm.classList.toggle('hidden');
        });
    </script>
    <script>
        function showpopup() {
            document.querySelector(".popup").style.display="flex";

        }
        function showpopup() {
            document.querySelector(".popup").style.display="none";

        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
</body>
</html>